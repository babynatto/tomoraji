  <body>
    <div class="login-container">
      <h2>Streamer Login</h2>
      <form id="loginForm" action="/login" method="POST">
        <div class="input-group">
          <label for="username">Username</label>
          <input type="text" id="username" name="username" required />
        </div>
        <div class="input-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" required />
        </div>
        <div class="input-group">
          <button type="submit">Login</button>
        </div>
      </form>
      <div class="error" id="errorMessage"></div>
    </div>

    <script>
      // Handle login response from backend (for example, showing error messages)
      const loginForm = document.getElementById("loginForm");
      loginForm.addEventListener("submit", function (event) {
        event.preventDefault();

        const username = document.getElementById("username").value;
        const password = document.getElementById("password").value;

        // Validate the inputs here if needed (optional)
        if (username && password) {
          loginForm.submit(); // Submit the form to backend if validation passes
        } else {
          document.getElementById("errorMessage").textContent = "Please fill in all fields!";
        }
      });
    </script>
